{
  "name": "claude-forge",
  "displayName": "ClaudeForge",
  "description": "Seamlessly integrate Claude.ai's powerful AI capabilities into VSCode.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "claudeForge": [
        {
          "type": "webview",
          "id": "claudeForge.sidebarView",
          "name": "ClaudeForge"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claudeForge",
          "title": "ClaudeForge",
          "icon": "media/claude-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "claudeForge.indexProject",
        "title": "Index Project"
      },
      {
        "command": "claudeForge.configure",
        "title": "Configure ClaudeForge"
      }
    ],
    "configuration": {
      "title": "ClaudeForge",
      "properties": {
        "claudeForge.apiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API Key for ClaudeForge"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "copy-media": "mkdir -p out/media && cp -R media/* out/media/"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "esbuild": "^0.23.0",
    "fs-extra": "^11.2.0"
  }
}
